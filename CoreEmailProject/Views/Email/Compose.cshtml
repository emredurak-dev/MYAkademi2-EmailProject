@model EmailMessage
@{
	ViewData["Title"] = "Compose";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Success != null)
{
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<script>
		Swal.fire({
			icon: 'success',
			title: '@ViewBag.Success!',
			text: 'Mesajını hiç teslim etmemek üzere yolladık. Umarız gitmemiştir 😅',
			showConfirmButton: true,
			 confirmButtonText: 'Yandık 😂'
		});
	</script>
}
<div class="content-body"
<div class="email-right-box">
	<div class="toolbar" role="toolbar">
		<h4>ReadIt. Yeni Mesaj Oluştur</h4>
		<hr>
	</div>
	<div class="compose-content mt-5">
		<form method="post">
			<div class="form-group">
				<input type="text" class="form-control bg-transparent" asp-for="RecipientEmailAddress" placeholder=" Alıcı">
			</div>
			<div class="form-group">
				<input type="text" class="form-control bg-transparent" asp-for="EmailSubject" placeholder=" Konu">
			</div>
			<div class="form-group">
				<textarea class="textarea_editor form-control bg-light" rows="15" asp-for="EmailBody" placeholder="Mesaj..."></textarea>
			</div>
			<div class="text-left m-t-15">
				<button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
				<button type="button" onclick="resetForm()" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20">
	<i class="ti-close m-r-5 f-s-12"></i> İptal Et
</button>

			</div>
		</form>
	</div>
</div>
</div>

<script>
	function resetForm() {
		const form = document.querySelector("form");
		if (form) {
			form.reset();
		}
	}
</script>
